doctype html
html(lang = "ru")
	head
		title= "Barbershop"
		meta(charset = "utf-8")
		link(href="styles/css.css" rel="stylesheet")
		link(href="styles/reset.css" rel="stylesheet")
		link(href="https://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel="stylesheet")
	body.body
		header.header
			.container
				nav.navigation
					ul
						li(href="")
							a(href='index.html') Главная
						li
							a(href='') Информация
						li
							a(href='') Новости
						li
							a(href='price.html') Прайс-лист
						li(class="active")
							a(href='shop.html') Магазин
						li
							a(href='') Контакты
						li.login
							a(href='') Вход
		main.page-shop
			.container
				h1(class="page-title") BARBERSHOP BORODINSKI - МАГАЗИН
				.breadcrumbs
					.row
						ul
							li
								a(href='') ГЛАВНАЯ
							li
								a(href='') МАГАЗИН
							li
								a(href="") СРЕДСТВА ДЛЯ УХОДА
				.row
					.col.col-3
						.manufacturers
							form.form-catalog
								h1 ПРОИЗВОДИТЕЛИ
								.form-row
									input(type="checkbox" id="c1")
									label(for="c1") BAXTER OF CALIFORNIA
								.form-row
									input(type="checkbox" id="c2" checked)
									label(for="c2") MR NATTY
								.form-row
									input(type="checkbox" id="c3")
									label(for="c3") SUAVECITO
								.form-row
									input(type="checkbox" id="c4" checked)
									label(for="c4") MALIN+GOETZ
								.form-row
									input(type="checkbox" id="c5")
									label(for="c5") MURRAY’S
								.form-row
									input(type="checkbox" id="c6" checked)
									label(for="c6") AMERICAN CREW
						.goods
							form.form-catalog
								h1 ГРУППЫ ТОВАРОВ:
								.form-row
									input(type="radio" name="radio" id="r1" checked)
									label(for="r1") БРИТВЕННЫЕ ПРИНАДЛЕЖНОСТИ
								.form-row
									input(type="radio" name="radio" id="r2")
									label(for="r2") СРЕДСТВА ДЛЯ УХОДА
								.form-row.disabled
									input(type="radio" name="radio" id="r3" disabled)
									label(for="r3") АКСЕССУАРЫ
					.col.col-9
						.items
							figure.card
								a(href="")
									img(src="img/catalog-content-1.jpg", alt="" width="220" height="165")
								.description
									h2 BAXTER OF CALIFORNIA
