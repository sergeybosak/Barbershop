							figure.card
								a(href="")
									img(src="img/catalog-content-3.jpg", alt="" width="220" height="165")
								.description
									h2 SUAVECITO
									p Гель для волос
									.price
										.text 290 РУБ.
										a(href="" class="btn") КУПИТЬ	
							figure.card
								a(href="")
									img(src="img/catalog-content-4.jpg", alt="" width="220" height="165")
								.description
									h2 AMERICAN CREW
									p Глина для укладки волос
									.price
										.text 500 РУБ.
										a(href="" class="btn") КУПИТЬ	
							figure.card
